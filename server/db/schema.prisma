model Member {
  id          Int      @id @default(autoincrement())
  firstName   String
  lastName    String
  email       String   @unique
  password    String
  age         Int
  emergencyContact EmergencyContact?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model EmergencyContact {
  id          Int      @id @default(autoincrement())
  memberId    Int      @unique
  name        String
  relationship String
  phone       String
  member      Member    @relation(fields: [memberId], references: [id])
}
